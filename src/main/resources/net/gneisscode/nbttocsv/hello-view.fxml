<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import org.controlsfx.control.ToggleSwitch?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="net.gneisscode.nbttocsv.HelloController" >
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Button text="Process input file" onAction="#onHelloButtonClick"/>
    <TextField fx:id="inputArea" text="Please write input file here!"/>
    <Label fx:id="outputCsvButton"/>
    <Button text="Write output CSV" onAction="#onOutputClick"/>
    <ToggleSwitch fx:id="writeAir"/>
    <TextField fx:id="csvPathInput" text="CSV output file path"/>
</VBox>
